{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server/index.js"
      },
      {
        "src": "/(.*)", 
        "dest": "/client/dist/index.html"
      }
    ]
  }
